<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditRoutine">

    <android.support.v7.widget.CardView
        android:id="@+id/ViewRoutineCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textDay"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday"
                android:textSize="50dp"
                android:paddingBottom="5dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/hrline"
                android:background="@android:color/darker_gray"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText

                        android:id="@+id/textSubject1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Subject1"
                        android:textSize="20sp"
                        />

                    <EditText
                        android:id="@+id/Time1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="time"
                        android:textSize="20sp"
                        android:layout_marginLeft="80dp"
                        android:paddingRight="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <EditText

                        android:id="@+id/textSubject2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Subject2"
                        android:textSize="20sp"
                        />

                    <EditText
                        android:id="@+id/Time2"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="9:00 to 11:00"
                        android:textSize="20sp"
                        android:layout_marginLeft="80dp"
                        android:paddingRight="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <EditText

                        android:id="@+id/textSubject3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Subject3"
                        android:textSize="20sp"
                        />

                    <EditText
                        android:id="@+id/Time3"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="9:00 to 11:00"
                        android:textSize="20sp"
                        android:layout_marginLeft="80dp"
                        android:paddingRight="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <EditText

                        android:id="@+id/textSubject4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Subject4"
                        android:textSize="20sp"
                        />

                    <EditText
                        android:id="@+id/Time4"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="9:00 to 11:00"
                        android:textSize="20sp"
                        android:layout_marginLeft="80dp"
                        android:paddingRight="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <EditText

                        android:id="@+id/textSubject5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Subject5"
                        android:textSize="20sp"
                        />

                    <EditText
                        android:id="@+id/Time5"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="9:00 to 11:00"
                        android:textSize="20sp"
                        android:layout_marginLeft="80dp"
                        android:paddingRight="10dp"
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray"
                    />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editRoutine"
                    android:text="Edit"
                    android:layout_margin="10dp"

                    />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>