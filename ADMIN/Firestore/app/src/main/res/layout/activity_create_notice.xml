<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_notice">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Notice"
        android:id="@+id/txtview_notice"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:fontFamily="cursive"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/txtview_notice"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/notice_title"
        android:layout_below="@+id/txtview_notice"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:hint="TITLE"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/notice_desc"
        android:hint="Description"
        android:paddingBottom="100dp"
        android:layout_below="@+id/notice_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/btn_create_notice"
        android:layout_below="@+id/notice_desc"
        android:layout_margin="10dp"
        />

</RelativeLayout>