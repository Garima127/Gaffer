<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_assignment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Assignment"
        android:id="@+id/txtview_hw"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:fontFamily="cursive"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/txtview_hw"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/hw_title"
        android:hint="Title"
        android:layout_below="@+id/txtview_hw"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/hw_subject"
        android:hint="Subject"
        android:layout_below="@id/hw_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"

        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/hw_teacher"
        android:hint="Teacher"
        android:layout_below="@id/hw_title"
        android:layout_toEndOf="@+id/hw_subject"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"

        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/hw_deadline"
        android:hint="Deadline"
        android:layout_below="@id/hw_subject"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/hw_desc"
        android:hint="Description"
        android:layout_below="@id/hw_deadline"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingBottom="100dp"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/btn_create_hw"
        android:layout_below="@+id/hw_desc"
        android:layout_margin="10dp"
        />


</RelativeLayout>